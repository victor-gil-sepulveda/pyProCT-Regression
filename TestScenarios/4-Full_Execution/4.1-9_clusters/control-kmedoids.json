{
    "global": {
        "control": {
            "scheduler_type": "Process/Parallel",
            "number_of_processes": 3
        },
        "workspace": {
            "base": "kmedoids_clustering"
        }
    },
    "data": {
        "type": "protein::ensemble",
        "files": [
                "Data/files/9_natural_clusters.pdb"
        ],
        "matrix": {
            "method": "rmsd::ensemble",
            "parameters": {
                "calculator_type": "QCP_OMP_CALCULATOR",
                "fit_selection": "name CA"
            },
            "image": {
                "filename": "matrix_plot"
            }
        }
    },
    "clustering": {
        "generation": {
            "method": "generate"
        },
        "algorithms": {
            "kmedoids": {
                "parameters":[
                                {"k":4},
                                {"k":5},
                                {"k":6}
                ]
            }
        },
        "evaluation": {
            "maximum_noise": 0,
            "evaluation_criteria": {
                "criteria_0": {
                    "Silhouette": {
                        "action": ">",
                        "weight": 3
                    },
                    "Cohesion": {
                        "action": ">",
                        "weight": 2
                    }
                }
            },
            "minimum_cluster_size": 20,
            "query_types": [
                "NumClusters",
                "NoiseLevel",
                "MeanClusterSize"
            ],
            "maximum_clusters": 50,
            "minimum_clusters": 1
        }
    },
    "postprocess": {
        "rmsf": {},

        "representatives": {
            "keep_remarks": true,
            "keep_frame_number": false
        },

        "pdb_clusters": {
            "keep_remarks": false,
            "keep_frame_number": true
        },

        "cluster_stats":{}
    }
}
